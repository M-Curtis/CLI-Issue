@{
    ViewData["Title"] = "Documentation";
}
<a asp-controller="Documentation" asp-action="Categories">Categories</a>
<br/>
Search:
<form asp-action="Index" name="searchDocForm" id="searchDocForm" method="post">
    <input type="text" name="searchInput"/>
    Category:
    <select name="selection" asp-items="@(new SelectList(Model.CategoriesList, "Id", "CategoryName"))">
        <option Value="*" label="*" selected="selected"></option>
    </select>
    <input class="btn btn-default" type="submit" value="Search"/>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Title
        </th>
        <th>
            Category
        </th>
        <th>
                
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in ViewBag.docList){
        <tr>
            <td>
                <a asp-action="Document" asp-route-id="@item.Id">
                    @item.Title
                </a>
            </td>
            <td>
                @item.Category
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | 
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>