@model List<MainSite.Models.DownloadViewModels.DownloadCategory>
@{
    ViewData["Title"] = "Upload File"; 
}
<form method="post" enctype="multipart/form-data">
    <label>Category:</label>
    <select onchange="getVal(this)" name="category" asp-items='new SelectList(Model, "Id", "CategoryName")'>
    </select>
    <div id="categoryForm">

    </div>
    <input type="file" name="file" required/><br/>
    <button class="btn btn-info" type="submit">
        <i class="fa fa-upload"></i> Upload
    </button>
</form>
<script type="text/javascript">
    const CategoryForm = "<label>Category Name:</label><input type='text' name='categoryForm' style='width: 75%'/>";
    function getVal(sel) {
        const doc = document.getElementById("categoryForm");
        if (sel.value === "0") {
            doc.innerHTML = CategoryForm;
        } else {
            doc.innerHTML = "";
        }
    };
</script>