@{
    ViewData["Title"]= "Claim Management Table";
}
<section class="content-header">
    <h1>
        Claims
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Claim Table</h3>
        </div>
        <div class="box-body">
            <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-6"></div>
                    <div class="col-sm-6"></div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                            <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">User</th>
                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Claim Type</th>
                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">Claim Value</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            @for (var i = 0; i < ViewBag.claims.Count; i++)
                            {
                                var cur = i%2 != 0 ? "odd" : "even";
                                <tr role="row" class="@cur">
                                    <td class="sorting_1">@ViewBag.users[i]</td>
                                    <td>@ViewBag.claims[i].ClaimType</td>
                                    <td>@ViewBag.claims[i].ClaimValue</td>
                                    <td>
                                        <a asp-action="Claim_Edit" asp-route-id="@ViewBag.claims[i].Id">Edit</a> |
                                        <a asp-action="Claim_Details" asp-route-id="@ViewBag.claims[i].Id">Details</a> |
                                        <a asp-action="Claim_Delete" asp-route-id="@ViewBag.claims[i].Id">Delete</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>