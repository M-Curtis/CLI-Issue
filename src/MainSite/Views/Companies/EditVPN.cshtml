@model Vpn
@{
    ViewData["Title"] = "Edit VPN";
}
<form method="post">
    <input type="hidden" hidden value="@Model.Id" name="vId" />
    <div class="form-group" style="width: 75%">
        <label asp-for="Address">Hostname:</label><br />
        <input asp-for="Address" value="@Model.Address" name="hName" />
    </div>
    <input type="submit" value="Submit" class="btn btn-default" />
</form>